page{
    display: flex;
    flex-direction: column;
    height: 100%;
    margin: 0;
    padding: 0;
   
  }
  .navbar{
    width: 100%;
    flex: none;
    display: flex;
    background: #fff;

   
  }
  .navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
    font-weight: 1000;
    color:#d8d8d8;
    border-bottom: #d8d8d8 1px solid;
    
  }
  .navbar .item.active{
    color: #daa520;
    font-weight: 1000;
  }
  .navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #daa520;
    font-weight: 1000;
  }

  .content1{
      width:100%;
      height:700px;
  }

  .content2{
    width:100%;
    height:700px;
}
