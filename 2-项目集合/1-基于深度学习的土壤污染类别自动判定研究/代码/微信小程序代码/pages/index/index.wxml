<text>\n\n\n\n</text>
<view class="container" hover-class="btn_hover">
  <view class="chart-container {{showMap?'container-left':''}}">
    <ec-canvas wx:if="{{!isDisposed}}" id="mychart-dom-map" id="mychart-dom-map" canvas-id="mychart-map" ec="{{ ec }}" style="z-index: -100;" force-use-old-canvas="{{true}}"></ec-canvas>
    <cover-view style="left:{{toolTip.x}}px;top:{{toolTip.y}}px" wx:if="{{showToolTip}}" class="tool-tip">
      <cover-view style="width:50px;height:220px;" style="font-size: 8px;">
        <cover-view class="detail" style="font-size: 12px;">{{toolTip.name}}</cover-view>
      <cover-view class="nofont">
        </cover-view>
      <cover-view class="detail">{{toolTip.solid_name}}:{{toolTip.solid}}</cover-view>
      <cover-view class="nofont">
        </cover-view>
     <cover-view class="detail">{{toolTip.iron_name}}:{{toolTip.iron}}</cover-view>
     <cover-view class="nofont">
        </cover-view>
      </cover-view>


    </cover-view>
    <cover-view class="tool-back" wx:if="{{showBack}}">
      <button bindtap="drawChina">返回</button>
    </cover-view>
  </view>


  <view class="map-view" wx:if="{{showMap}}">
    <map id="map" longitude="{{centerPoint.longitude}}" latitude="{{centerPoint.latitude}}" scale="11" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>
    <button bindtap="backChart">返回</button>
  </view>
</view>
